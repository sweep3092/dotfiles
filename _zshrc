   zcompile ~/.zshrc
 fi 

# Only for Mac
case ${OSTYPE} in
  darwin*)
    eval "$(/opt/homebrew/bin/brew shellenv)"
    alias ls='ls -G'
    export PATH="/usr/local/sbin:$PATH"        
    # homebrew
    fpath=($(brew --prefix)/share/zsh/site-functions $fpath)
    fpath=($(brew --prefix)/share/zsh-completions $fpath)
    ;;
  linux*)
    alias ls='ls --color'
    ;;
esac

